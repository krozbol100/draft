{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "newEmailAdminAccount": {
            "defaultValue": "sadmir.duric@comtrade.com",
            "type": "String",
            "metadata": {
                "description": "Email address for Admin User. Very important that this is a valid Azure AD account. Otherwise, login will not work."
            }
        },
        "sqlServerAdministratorUsername": {
            "defaultValue": "esessiondbadmin",
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Azure SQL Server Administrator Username."
            }
        },
        "sqlServerAdministratorPassword": {
            "defaultValue": "P@ssw0rd",
            "minLength": 8,
            "maxLength": 128,
            "type": "SecureString",
            "metadata": {
                "description": "Azure SQL Server Administrator Password"
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
            "metadata": {
                "description": "Location for all the resources."
            }
        }
    },
    "variables": {
        "siteName": "[concat('esession-', uniqueString(resourceGroup().id))]",
        "siteName01": "[concat('esession-rest-', uniqueString(resourceGroup().id))]",
        "siteName02": "[concat('esession-app-', uniqueString(resourceGroup().id))]",
        "siteName03": "[concat('esession-user-', uniqueString(resourceGroup().id))]",
        "siteName04": "[concat('esession-rendition-', uniqueString(resourceGroup().id))]",
        "siteName05": "[concat('esession-core-', uniqueString(resourceGroup().id))]",
        "databaseName01": "esession", 
        "databaseName02": "esession-signalr",
        "databaseName03": "esessionRendition",
        "databaseName04": "esession-dmsqueue",
        "sqlServerName": "esession-test-sqlserver",
        "servicePlanName01": "[concat(variables('siteName'), '-linux')]",
        "servicePlanName02": "[concat(variables('siteName'), '-asp')]"
        //"_artifactLocation": "[deployment().properties.templateLink.uri]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('servicePlanName02')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "D1",
                "tier": "Shared",
                "size": "D1",
                "family": "D",
                "capacity": 0
            },
            "kind": "app",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-06-01",
            "name": "[variables('siteName02')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('servicePlanName02'))]"
            ],
            "kind": "app",
            "properties": {
                "siteConfig": {
                    "netFrameworkVersion": "v4.0",
                    "webSocketsEnabled": true,
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "dotnetcore"
                        }
                    ]
                },
                "name": "[variables('siteName02')]",
                "serverFarmId": "[variables('servicePlanName02')]"
            },
            "resources": [
                {
                    "type": "extensions",
                    "apiVersion": "2015-08-01",
                    "name": "MSDeploy",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/', variables('siteName02'))]"
                    ],
                    "tags": {
                        "displayName": "webDeploy"
                    },
                    "properties": {
                        //"packageUri": "[uri(variables('_artifactLocation'),'webapp/wwwroot-session-app.zip')]",
                        "packageUri": "https://raw.githubusercontent.com/krozbol100/draft/master/webapp/wwwroot-esession-core.zip",
                        "dbType": "SQL",
                        "connectionString": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=',variables('sqlServerName'),'.database.windows.net,1433;Initial Catalog=master;User Id=',parameters('sqlServerAdministratorUsername'),';Password=', parameters('sqlServerAdministratorPassword'), ';')]",
                        "setParameters": {
                            "Application Path" : "[variables('siteName02')]",
                            "New eSession Admin Email": "[parameters('newEmailAdminAccount')]",
                            "New eSession Default connString": "xxxyyy",
                            "New eSession SignalR connString": "yyyxxx",
                            "New eSession App hostname": "[variables('siteName02')]",
                            "New eSession Core hostname": "[variables('siteName05')]",
                            "New eSession Rest hostname": "[variables('siteName01')]",
                            "New eSession User hostname": "[variables('siteName03')]",
                            "New eSession Rendition hostname": "[variables('siteName04')]",
                            "eSession Admin Connection String": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=',variables('sqlServerName'),'.database.windows.net,1433;Initial Catalog=',variables('databaseName01'),';User Id=',parameters('sqlServerAdministratorUsername'),';Password=', parameters('sqlServerAdministratorPassword'), ';')]",
                            "SignalR Admin Connection String": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=',variables('sqlServerName'),'.database.windows.net,1433;Initial Catalog=',variables('databaseName02'),';User Id=',parameters('sqlServerAdministratorUsername'),';Password=', parameters('sqlServerAdministratorPassword'), ';')]"
                    }
                }
                }
            ]
        }
    ],
    "outputs": {
        "siteName02": {
            "value": "[concat(variables('siteName02'), '.azurewebsites.net')]",
            "type": "string"
        },
        // "publishing": {
        //     "value": "[list(resourceId('Microsoft.Web/sites/config', variables('siteName02'), 'publishingcredentials'), '2016-08-01').properties]",
        //     "type": "object"
        // },
        // "publishingAll": {
        //     "value": "[reference(variables('siteName02'))]",
        //     "type": "object"
        // },
        "publishingFtps": {
            "value": "[reference(variables('siteName02')).ftpsHostName]",
            "type": "string"
        },
        "publishingUsername": {
            "value": "[reference(variables('siteName02')).ftpUserName]",
            "type": "string"
        },
        "publishingPassword": {
            "value": "[list(resourceId('Microsoft.Web/sites/config', variables('siteName02'), 'publishingcredentials'), '2016-08-01').properties.publishingPassword]",
            "type": "string"
        }//,
        // "username": {
        //     "value": "[list(resourceId('Microsoft.Web/sites/config', variables('siteName02'), 'publishingcredentials'), '2016-08-01').properties.publishingUserName]",
        //     "type": "string"
        // },
        // "password": {
        //     "value": "[list(resourceId('Microsoft.Web/sites/config', variables('siteName02'), 'publishingcredentials'), '2016-08-01').properties.publishingPassword]",
        //     "type": "string"
        // }
    }
}